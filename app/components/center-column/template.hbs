<div class="header">
  {{#if showLeftColumnOpenIcon}}
    <span class="nav-left">
      <span class="hint--bottom hint--rounded" title="Show Assets and Transactions" >
        <span class="glyphicon glyphicon-chevron-right" {{action 'showLeftColumn'}}></span>
      </span>
    </span>
  {{/if}}

  <span class="nav-right">
    {{#if canCloseCentralColumn}}
      {{#unless centerColumnShow}}
        <span class="hint--bottom hint--rounded" title="Hide Smart Contract and Graph">
          <span class="glyphicon glyphicon-remove" {{action 'closeCentralColumn'}}></span>
        </span>
      {{/unless}}
    {{/if}}
    {{#if showRightColumnOpenIcon}}
      <span class="hint--bottom hint--rounded" title="Show Contract Editor">
          <span class="glyphicon glyphicon-chevron-left" {{action 'showRightColumn'}}></span>
      </span>
    {{/if}}
  </span>
</div>
{{#if isCompiling}}
    <div class="ember-load-indicator">Compiling contract...</div>
{{/if}}
{{tabbed-container schema=schema code=code yaml=yaml viewChange=(action viewChange 'tabbed-container')}}