{{#twiddle-panes numColumns=numColumns fullScreen=fullScreen leftColumnShow=leftColumnShow rightColumnShow=rightColumnShow}}
  {{!-- {{#unless fullScreen}} --}}
    {{#if leftColumnShow}}
      <div class="twiddle-pane file-tree">
        {{left-column model=model hideLeftColumn=(action this.hideLeftColumn) }}
      </div>
    {{/if}}

    {{!-- {{#each columns as |column|}}
      {{#if column.show}}
        <div class="twiddle-pane code {{if column.active 'active'}}">
          {{center-column col=column.col
                               numColumns=numColumns
                               leftColumnShown=leftColumnShown
                               removeColumn=(action this.removeColumn)
                               addColumn=(action this.addColumn)
                               showLeftColumn=(action this.showLeftColumn)
          }}
        </div>
      {{/if}}
    {{/each}} --}}
  {{!-- {{/unless}} --}}

  <div class="twiddle-pane code {{if column.active 'active'}}">
    {{center-column col=1
                    numColumns=numColumns
                    leftColumnShown=leftColumnShown
                    removeColumn=(action this.removeColumn)
                    addColumn=(action this.addColumn)
                    showLeftColumn=(action this.showLeftColumn)
    }}
  </div>
  <div class="twiddle-pane output {{if fullScreen 'full-screen'}}">
    {{right-column isBuilding=isBuilding
                   rightColumnShow=rightColumnShow
                   removeColumn=(action this.removeColumn)
                   addColumn=(action this.addColumn)
                   showRightColumn=(action this.showRightColumn)
    }}
  </div>

{{/twiddle-panes}}