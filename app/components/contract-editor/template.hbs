{{#paper-card as |card|}}
    {{#card.title as |title|}}
        {{#title.text as |text|}}
            {{#text.headline}}Contract Editor{{/text.headline}}
        {{/title.text}}
    {{/card.title}}
    {{#card.content}}
        {{#ember-ace
            minlines=10
            value=yaml
            mode=mode
            highlightActiveLine=highlightActiveLine
            showPrintMargin=showPrintMargin
            readOnly=readOnly
            tabSize=tabSize
            useSoftTabs=useSoftTabs
            useWrapMode=useWrapMode
            editorClass="contract-editor-wrapper"
            showInvisibles=showInvisibles
            showGutter=showGutter
            showIndentGuides=showIndentGuides
            theme=theme
            overlays=overlays
            update=(action 'valueUpdated')
            suggestCompletions=(action 'suggestCompletions')
            as |editor| }}
            {{#editor.completion-tooltip as |suggestion|}}
                Caption: {{suggestion.caption}}
            {{/editor.completion-tooltip}}
        {{/ember-ace}}
    {{/card.content}}
{{/paper-card}}