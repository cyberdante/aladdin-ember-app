{{#paper-card as |card|}}
    {{#card.title as |title|}}
        {{#title.text as |text|}}
            {{#text.headline}}Contract Editor{{/text.headline}}
        {{/title.text}}
    {{/card.title}}
    {{#card.content}}
        {{ember-ace
            value=value 
            useSoftTabs=true
            tabSize=4
            minlines=10
            useWrapMode="true"
            editorClass="contract-editor-wrapper"
            update=(action 'valueUpdated')}}
        {{!-- <div id='preview'>
            {{rawData}}
        </div> --}}
    {{/card.content}}
{{/paper-card}}
