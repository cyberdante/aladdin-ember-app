{{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}
          Assets & Transactions Wizard
        {{/text.headline}}
      {{/title.text}}
    {{/card.title}}
    {{#card.content}}
      {{#paper-grid-list
        cols="1 md-2 gt-md-6"
        rowHeight="gt-md-1:1 2:2"
        gutter="12px gt-sm-8px" as |grid|}}
        {{#grid.tile class="white" colspan="sm-1 gt-sm-2" as |tile|}}
          {{#each assets as |asset|}}
            {{paper-button raised=true label=asset.title primary=asset.isSelected onClick=(action "selectAsset" asset)}}
          {{/each}}
        {{/grid.tile}}
        {{#grid.tile class="green" colspan="sm-1 gt-sm-2" as |tile|}}
        {{/grid.tile}}
      {{/paper-grid-list}}
    {{/card.content}}
{{/paper-card}}