{{#paper-card as |card|}}
    {{#if useTitle}}
        {{#card.title as |title|}}
            {{#title.text as |text|}}
                {{#text.headline}}
                Assets & Transactions Wizard
                {{/text.headline}}
            {{/title.text}}
        {{/card.title}}
    {{/if}}
    {{#card.content}}
    {{#each assets as |asset|}}
      {{paper-button raised=true label=asset.title primary=asset.isSelected onClick=(action "selectAsset" asset)}}
    {{/each}}
    {{/card.content}}
{{/paper-card}}