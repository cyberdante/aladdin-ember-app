{{#paper-card as |card|}}
    {{#card.content}}
        {{#paper-tabs selected=selectedTab onChange=(action 'onChange') as |tabs|}}
            {{#each tabTitles as |title|}}
                {{#tabs.tab}}
                    {{title}}
                {{/tabs.tab}}
            {{/each}}
        {{/paper-tabs}}
        {{#if (not-eq selectedComponent 'contract-viewer')}}
            {{component selectedComponent}}
        {{else}}
            {{component selectedComponent mode=(concat 'ace/mode/' contractLanguage)}}
        {{/if}}
    {{/card.content}}
{{/paper-card}}
