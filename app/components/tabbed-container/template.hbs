{{#paper-card class="aladdin-tabs-container" as |card|}}
    {{#card.content}}
        {{#paper-tabs
            class="aladdin-tab"
            selected=selectedTab
            borderBottom="true"
            shouldPaginate=false
            onChange=(action 'onChange') as |tabs|}}
            {{#each tabTitles as |title|}}
                {{#tabs.tab}}
                    {{title}}
                {{/tabs.tab}}
            {{/each}}
        {{/paper-tabs}}
        {{#if (not-eq selectedComponent 'contract-viewer')}}
            {{component selectedComponent}}
        {{else}}
            {{component selectedComponent mode=(concat 'ace/mode/' contractLanguage) value=contractCode}}
        {{/if}}
    {{/card.content}}
{{/paper-card}}
