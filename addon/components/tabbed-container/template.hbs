{{#paper-card class="aladdin-tabs-container" as |card|}}
    {{#card.content}}
        {{!-- {{#paper-tabs
            class="aladdin-tab"
            selected=selectedTab
            borderBottom="false"
            shouldPaginate=false
            onChange=(action 'onChange') as |tabs|}}
            {{#each tabTitles as |title|}}
                {{#tabs.tab}}
                    {{title}}
                {{/tabs.tab}}
            {{/each}}
        {{/paper-tabs}} --}}
        {{#if (not-eq selectedComponent 'contract-viewer')}}
            {{component 
                selectedComponent
                showTitle=showTitle
                schema=schema
                viewChange=(action viewChange) }}
        {{else}}
            {{component 
                selectedComponent
                showTitle=showTitle
                contractType='ethereum'
                value=code
                solCversion=solCversion
                viewChange=(action viewChange)
                logValues=logValues
                manualMode=manualMode
                toggleEditMode=(action this.toggleEditMode)
            }}
        {{/if}}
    {{/card.content}}
{{/paper-card}}